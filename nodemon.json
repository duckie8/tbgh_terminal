{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules"
    ],
    "verbose": true,
    "execMap": {
        "js": "node"
    },
    "watch": [
        "base",
        "lib",
        "logic",
        "model",
        "routes",
        "app.js",
        "config.js"
    ],
    "env": {
        "NODE_ENV": "development",
        "PORT": "3000"
    },
    "ext": "js html"
}
